<% bump = user.bumps.where(:band_id => band.id, :unbumped_at => nil).first %>
<% unless bump.nil? %>
  <%= link_to 'Unbump', bump_destroy_url(:id => bump.id), :confirm => "Are you sure?", :class => "btn btn-small btn-danger pull-right" %>
<% else %>
  <%= form_tag("/bump/new", :method => 'post') do %>
    <%= text_field_tag(:invested_cred, nil, :placeholder => "Cred") %>
    <%= hidden_field_tag(:mbid, band.mbid) %>
    <%= submit_tag "Bump", :class => "btn btn-success pull-right" %>
  <% end %>
<% end %>
